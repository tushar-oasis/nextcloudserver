<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*group_folders</name>
		<declaration>
			<field>
				<name>folder_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>6</length>
			</field>
			<field>
				<name>mount_point</name>
				<type>text</type>
				<length>128</length>
				<notnull>true</notnull>
			</field>
			<field>
				<name>quota</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>6</length>
				<default>-3</default>
			</field>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*group_folders_applicable</name>
		<declaration>
			<field>
				<name>applicable_id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>6</length>
			</field>
			<field>
				<name>folder_id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>6</length>
			</field>
			<field>
				<name>permissions</name>
				<type>integer</type>
				<length>4</length>
				<notnull>true</notnull>
			</field>
			<field>
				<name>group_id</name>
				<type>text</type>
				<length>64</length>
			</field>

			<index>
				<name>applicable_folder</name>
				<field>
					<name>folder_id</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>applicable_folder_value</name>
				<field>
					<name>group_id</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>applicable_folder_group</name>
				<unique>true</unique>
				<field>
					<name>folder_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>group_id</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
